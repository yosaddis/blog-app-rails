
<div class='row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative'>
  <div class='col-auto d-none d-lg-block'><%= image_tag(@user.photo) %></div>
  <div class='col p-4 d-flex flex-column position-static'>
    <h2><%= @user.name %></h2>
    <p class= ''>Number of Posts <%= @user.posts_counter %></p>
  </div>
</div>
  <div class='row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 align-center'>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>
  <% if @user.last_posts.any? %>
    <div class='container border rounded'>
      <h2>Recent Posts</h2>
      <% @user.last_posts.each do |post| %>
        <div class='container border rounded'>
          <h3><%= link_to  post.title , user_post_path(@user.id, post.id) ,class: 'h3' %></h3>
          <p><%= post.text %></p>
           <div class='d-flex justify-content-end'>
          <h5>Likes <%= post.likes_counter %></h5> &nbsp;
          <h5>Comments <%= post.comments_counter %><h5>
        </div>
        </div>
          <% end %>
    </div>
    <br/>
      <div class="d-flex justify-content-center">
          <%= link_to 'See all posts', user_posts_path(@user.id), class:'btn btn-secondary center' %>
      </div>
    <% else %>
      <p>This user has no posts yet</p>
    <% end %>